#!/bin/bash

# memory setting
JVM_MEM="-Xms128m -Xmx2G"
JVM_DEFAULT="-server -d64" # -d64 -ea

JVM="$JVM_DEFAULT $JVM_MEM"
MAVEN_OPTS="$MAVEN_OPTS $JVM"

HOST=$(hostname)

if [ "$HOST" == "bigBhoerdzn" ]; then
	MAVEN_OPTS="$MAVEN_OPTS -Djava.io.tmpdir=/media/Brain2/tmp"
fi

if [ $# -eq 0 ]; then
  	mvn test
else
	mvn -Dtest="$*" test
fi

